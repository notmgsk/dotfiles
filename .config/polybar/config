[colors]
;background = ${xrdb:color0:#222}
background = #cc34103c
background-alt = #fbaec3
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #000
primary = #34103c
secondary = #e60053
alert = #bd2c40


[bar/example]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 50
;offset-x = 1%
;offset-y = 1%
radius = 10
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

