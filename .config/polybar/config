font-2 = Siji:pixelsize=10;1

;font-0 = fixed:pixelsize=18;1
;font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
;font-2 = siji:pixelsize=10;1

modules-left = bspwm
modules-center = 
modules-right = filesystem volume memory cpu network battery temperature date

tray-position = right
